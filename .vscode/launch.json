    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run start:debug",
            "name": "Debug node",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "src/__tests__/post.spec.ts",           
                // "--testTimeout= 100000",
                "--runInBand",
                "--forceExit",
                "--no-cache",
                "--experimental-specifier-resolution=node",
                "--setupFiles",
                // "dotenv/config",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },

    ]
}